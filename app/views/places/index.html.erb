<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
  	<h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />

    <% if place.pics.present? %>
    <div class="col-xs-10-offset-1 text-center">
    	<%= image_tag place.profilepicture, :class => 'img-responsive' %>
    </div><br /><p>
    <% end %>

    
<p><%= place.description %></p>
   

<% if place.comments.present? %>
  <div class="col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
<% end %>

<br/> 

<% if place.user.present? %>
<div class= "pull-right">
      Uploaded By: <small><%= place.user.email %></small>
      </div>
    <% end %>

  </div>
  <% end %>

 <nav class="apple_pagination">
<%= will_paginate @places %>
</nav>